/* pages/home/search-page/search-page.wxss */

.search-page {
  width: 100%;
  padding: 0 40rpx;
}

.search-page-search-view {
  width: 100%;
  margin: 32rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.search-page-search-button {
  flex: 1;
  border: #E5E5E5 2rpx solid;
  border-radius: 16rpx;
  padding: 12rpx 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.search-page-search-input {
  font-size: 28rpx;
  color: #696D76;
  margin-left: 8rpx;
  width: 70%;
}

.search-page-search-text {
  font-size: 32rpx;
  color: #32cdff;
  margin-left: 32rpx;
}

.search-page-search-placeholder {
  font-size: 32rpx;
  color: #E3E3E3;
}

.search-page-options {
  position: absolute;
  left: 0;
  right: 0;
  top: 80rpx;
  border: #E5E5E5 2rpx solid;
  border-radius: 16rpx;
  padding: 32rpx;
  z-index: 10;
  background-color: white;
}

.search-page-options-item {
  height: 100rpx;
  border-bottom: #E5E5E5 2rpx solid;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  font-size: 32rpx;
  color: #696D76;
}

.search-page-content {
  width: 100%;
  display: flex;
  flex: 1;
}

.search-page-item {
  width: 100%;
  height: 100rpx;
  border: #E5E5E5 2rpx solid;
  padding-left: 16rpx;
  font-size: 32rpx;
  color: #696D76;
  display: flex;
  align-items: center;
  border-radius: 16rpx;
}

.search-page-search-empty-view {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.search-page-search-empty-text {
  font-size: 36rpx;
  color: #E1E2E3;
}
