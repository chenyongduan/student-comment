/* pages/home/student-page/student-page.wxss */

.student-page {
  padding: 0 40rpx;
}

.student-page-date {
  padding: 32rpx 0;
}

.student-page-name {
  font-size: 40rpx;
  color: #282B31;
  margin-top: 32rpx;
}

.student-page-date-text {
  color: #32cdff;
}

.student-page-comment {
  width: 48%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  margin: 16rpx 0;
  padding: 0 32rpx;
  border: #E5E5E5 2rpx solid;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #696D76;
}

.student-page-button-content {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
